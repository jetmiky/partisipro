# Firebase Configuration
_FIREBASE_PROJECT_ID=partisipro-dev
_FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
_FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@partisipro-dev.iam.gserviceaccount.com
_FIREBASE_DATABASE_URL=https://partisipro-dev-default-rtdb.firebaseio.com

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Blockchain Configuration
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
ARBITRUM_ONE_RPC_URL=https://arb1.arbitrum.io/rpc
PRIVATE_KEY=your-private-key-here
ARBISCAN_API_KEY=your-arbiscan-api-key

# KYC Provider Configuration
VERIHUBS_API_KEY=your-verihubs-api-key
VERIHUBS_API_URL=https://api.verihubs.com
VERIHUBS_WEBHOOK_SECRET=your-webhook-secret

# Payment Gateway Configuration
MIDTRANS_SERVER_KEY=your-midtrans-server-key
MIDTRANS_CLIENT_KEY=your-midtrans-client-key
MIDTRANS_IS_PRODUCTION=false
MIDTRANS_WEBHOOK_NOTIFICATION_URL=https://your-domain.com/api/payments/webhook

# Application Configuration
NODE_ENV=development
NESTJS_PORT=3001
API_PREFIX=api
CORS_ORIGIN=http://localhost:3000

# Web3Auth Configuration
WEB3AUTH_CLIENT_ID=your-web3auth-client-id
WEB3AUTH_CLIENT_SECRET=your-web3auth-client-secret

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=2
MANAGEMENT_FEE_PERCENTAGE=5
MINIMUM_INVESTMENT_IDR=100000
MAXIMUM_INVESTMENT_IDR=100000000

# Security Configuration
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100
BCRYPT_SALT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-here
API_KEYS=api-key-1,api-key-2,api-key-3

# Monitoring Configuration
MONITORING_ENABLED=true
ALERT_EMAIL=admin@partisipro.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5