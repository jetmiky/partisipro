# Development environment configuration for Firebase emulators
NODE_ENV=development

# Firebase Emulator Configuration
FIREBASE_PROJECT_ID=partisipro-dev
FIREBASE_PRIVATE_KEY=""
FIREBASE_CLIENT_EMAIL=""
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099

# JWT Configuration
JWT_SECRET=dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for development, can use local Redis or skip)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# API Configuration
API_PORT=3000
API_PREFIX=api
API_VERSION=v1

# Third-party Services (Mock/Development)
KYC_PROVIDER=verihubs
KYC_API_KEY=dev_kyc_api_key
KYC_API_URL=https://api.verihubs.com/v1

PAYMENT_GATEWAY=midtrans
PAYMENT_API_KEY=dev_payment_api_key
PAYMENT_API_URL=https://api.sandbox.midtrans.com/v2

# Web3Auth Configuration
WEB3AUTH_CLIENT_ID=dev_web3auth_client_id
WEB3AUTH_CLIENT_SECRET=dev_web3auth_client_secret

# Blockchain Configuration
BLOCKCHAIN_NETWORK=arbitrum-sepolia
BLOCKCHAIN_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
BLOCKCHAIN_PRIVATE_KEY=your_private_key_here
BLOCKCHAIN_CHAIN_ID=421614

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@partisipro.com
EMAIL_PASS=your_email_password_here

# File Upload Configuration
UPLOAD_DEST=uploads/
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx