# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON
[*.{js,jsx,ts,tsx,json}]
indent_size = 2

# Solidity
[*.sol]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Batch files
[*.bat]
end_of_line = crlf